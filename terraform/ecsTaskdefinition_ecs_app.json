[
    {
        "name": "python-backend",
        "image": "${python_image_uri}",
        "essential": false,
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
              "awslogs-region": "us-east-1",
              "awslogs-stream-prefix": "python",
              "awslogs-group": "/ecs/backend/python"
            }
          },
        "portMappings": [
            {
                "containerPort": 5000,
                "protocol": "tcp"
            }
        ]
    },
    {
        "name": "php-frontend",
        "image": "${php_image_uri}",
        "essential": false,
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
              "awslogs-region": "us-east-1",
              "awslogs-stream-prefix": "php",
              "awslogs-group": "/ecs/frontend/php"
            }
          },
        "portMappings": [
            {
                "containerPort": 80,
                "protocol": "tcp"
            }
        ],
        "dependsOn": [
            {
                "containerName": "python-backend",
                "condition": "START"
            }
        ]
    }
]